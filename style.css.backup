main {
  /*padding: 20px;*/
}
header {
  background-color: yellow;
}

h1 {
  padding: 10px;
  font-size: 100%;
  padding-bottom: 40px;
}
nav ul,
.contact ul {
  display: flex;
  justify-content: center;
}
nav a {
  text-decoration: none;
  color: black;
  padding: 10px;
  font-size: 150%;
}

nav a:hover {
  background-color: rgb(136, 111, 247);
  border-radius: 10px;
}

.about-me {
  background-color: rgb(216, 204, 236);
  padding-top: 10px;
  padding-bottom: 10px;
  display: flex;
}

.about-me p {
  flex: 1;
  padding-left: 30px;
}
div avater {
  padding-bottom: 20px;
}
a email::before {
  content: url(./pics/email-icon.jpeg);
  width: 20px;
  height: 20px;
  position: absolute;
}
div github {
  width: 1px;
  height: 1px;
}
.about-me img {
  padding-top: 20px;
  border-radius: 50%;
  background-color: rgb(136, 111, 247);
  flex: 1;
}

.about-me h2 {
  font-size: 200%;
}

.contact p {
  padding-top: 20px;
}

.work h2 {
  padding-top: 20px;
  font-size: 200%;
}
.work img {
  padding-top: 20px;
  display: block; /*check if makes the difference*/

  max-width: 100%;
  height: 200px;
}
.contact h2 {
  padding-top: 20px;
  font-size: 200%;
  border-bottom: 2px solid;
}

.contact ul {
  padding-top: 20px;
}
.contact a {
  text-decoration: none;
  color: black;
  padding: 20px;
  font-size: 150%;
}

footer {
  padding: 20px;
  text-align: center;
}

@media screen and (min-width: 768px) {
  nav ul {
    display: flex;
    justify-content: flex-end;
  }
  .work img {
    justify-content: center;
    max-width: 25%;
    height: auto;
  }
  .about-me p {
  }
}
